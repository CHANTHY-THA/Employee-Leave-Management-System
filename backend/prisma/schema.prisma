// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  departmentId Int
  position String
  firstname String
  lastname String
  username String @db.VarChar(50) @unique
  profile String?
  gender String
  phonenumber String
  password String
  email String @unique
  role String @default("normal")
  country String
  city String
  address String
  isActive Boolean @default(true)
  created DateTime @default(now())
  updated  DateTime   @updatedAt
  leaves Leave[]
}

model Department {
  id Int @id @default(autoincrement())
  departmentName String @unique
  created DateTime @default(now())
  updated  DateTime   @updatedAt
}

model Leave {
  id Int @id @default(autoincrement())
  employeeid Int
  leaveStatusid Int
  leaveTypeid Int @unique
  totalLeave Int
  fromDate DateTime @db.Timestamptz
  toDate DateTime @db.Timestamptz
  reason String
  created DateTime @default(now()) @db.Date
  isActive Boolean @default(true)
  employee User @relation(fields: [employeeid], references: [id])
  leavetype LeaveType @relation(fields: [leaveTypeid], references: [id])
}

model LeaveType {
  id Int @id @default(autoincrement())
  name String
  amount Int
  created DateTime @default(now())
  isActive Boolean @default(true)
  leave Leave?
}

model PreData {
  id Int @id @default(autoincrement())
  criterial String
  value String
  type String
  description String
  created DateTime @default(now())
  isActive Boolean @default(true)
}

enum Role {
  EMPLOYEE
  ADMIN
}